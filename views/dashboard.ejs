<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Personal Task Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/tasks">Tasks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/reading">Reading List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/inventory">Inventory</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/real-estate">Real Estate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/crypto">Crypto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/bookkeeping">Bookkeeping</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Calendar
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/monthly-calendar">Monthly View</a></li>
                            <li><a class="dropdown-item" href="/weekly-calendar">Weekly View</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1 class="mb-4">Dashboard</h1>
        
        <div class="row">
            <!-- High Priority Tasks -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5 class="card-title mb-0">High Priority Tasks</h5>
                    </div>
                    <div class="card-body">
                        <div id="high-priority-tasks">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/tasks" class="btn btn-outline-primary btn-sm">View All Tasks</a>
                    </div>
                </div>
            </div>
            
            <!-- Reading Progress -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">Reading Progress</h5>
                    </div>
                    <div class="card-body">
                        <div id="reading-progress">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/reading" class="btn btn-outline-primary btn-sm">View Reading List</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <!-- Inventory Status -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">Inventory Status</h5>
                    </div>
                    <div class="card-body">
                        <div id="inventory-status">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/inventory" class="btn btn-outline-primary btn-sm">View Inventory</a>
                    </div>
                </div>
            </div>
            
            <!-- Real Estate Summary -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">Real Estate Summary</h5>
                    </div>
                    <div class="card-body">
                        <div id="real-estate-summary">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/real-estate" class="btn btn-outline-primary btn-sm">View Properties</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <!-- Crypto Investments -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">Crypto Investments</h5>
                    </div>
                    <div class="card-body">
                        <div id="crypto-summary">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/crypto" class="btn btn-outline-primary btn-sm">View Crypto Portfolio</a>
                    </div>
                </div>
            </div>
            
            <!-- Financial Summary -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="card-title mb-0">Financial Summary</h5>
                    </div>
                    <div class="card-body">
                        <div id="financial-summary">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/bookkeeping" class="btn btn-outline-primary btn-sm">View Bookkeeping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/dashboard.js"></script>
</body>
</html>
